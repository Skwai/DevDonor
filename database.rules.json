{
  "rules": {
    ".read": "true",
    ".write": "false",
    "projects": {
      ".indexOn": ["createdAt"]
    },
    "users": {
      "$uid": {
        ".read": "true",
        ".write": "auth.uid == $uid",
        ".validate": "newData.hasChildren(['email', 'name', 'picture'])",
        "email": {
          ".read": "false"
        }
      }
    },
    "countries": {
      ".read": "true",
      ".write": "false"
    }
  }
}
