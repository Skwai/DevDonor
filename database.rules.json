{
  "rules": {
    ".read": "true",
    ".write": "true",

    "projects": {
      ".indexOn": ["createdAt"]
    },
    "users": {
      "$uid": {
        ".read": true,
        ".write": "auth != null && auth.uid == auth.uid",

        "email": {
          ".read": "auth != null && auth.uid == uid"
        },
        "name": {
          ".validate": "newData.isString()"
        }
      }
    }
  }
}
