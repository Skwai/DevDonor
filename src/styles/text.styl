@require './config.styl'

textMuted()
  opacity: .5
  font-size: 87.5%

textCaps()
  font-size: 87.5%
  text-transform: uppercase
  font-weight: 500
  letter-spacing: 0.05em

textSmallCaps()
  textCaps()
  font-size: 75%

textBigCaps()
  textCaps()
  font-size: 1.125rem

textTitle()
  font-size: calc(1rem + 3vmin)
  line-height: 1
  font-weight: 600

textHeading()
  font-size: 1.3rem
  line-height: 1
  font-weight: 600

textSubheading()
  font-size: 1.15rem
  line-height: lineHeightSmall
  font-weight: 600

textLead()
  font-size: 1.15rem
  line-height: lineHeightSmall
  font-weight: 600

textLink()
  text-decoration: none
  box-shadow: 0 1px 0 currentColor

  &:hover
    box-shadow: 0 2px 0 currentColor
