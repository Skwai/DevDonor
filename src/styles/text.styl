@require './config.styl'

textMuted()
  opacity: .5
  font-size: 87.5%

textSmallCaps()
  opacity: .4
  font-size: 80%
  text-transform: uppercase
  font-weight: 600

textTitle()
  font-size: calc(1rem + 3vmin)
  line-height: lineHeightTiny
  font-weight: 700

textHeading()
  font-size: 1.3rem
  line-height: lineHeightSmall
  font-weight: 700

textSubheading()
  font-size: 1.15rem
  line-height: lineHeightSmall
  font-weight: 700

textLead()
  font-size: 1.15rem
  line-height: lineHeightSmall
  font-weight: 500

textLink()
  text-decoration: none
  box-shadow: 0 1px 0 currentColor

  &:hover
    box-shadow: 0 2px 0 currentColor
