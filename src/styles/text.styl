@require './config.styl'

textSmall()
  font-size: 87.5%

textMuted()
  opacity: .5
  textSmall()

textCaps()
  textSmall()
  text-transform: uppercase
  font-weight: 500
  letter-spacing: 0.05em

textSmallCaps()
  textCaps()
  font-size: 82.5%

textBigCaps()
  textCaps()
  font-weight: 600

textTitle()
  font-size: 1.5rem
  font-weight: 700

textHeading()
  font-size: 1.35rem
  font-weight: 700

textSubheading()
  font-size: 1.15rem
  font-weight: 700

textLead()
  font-size: 1.15rem
  font-weight: 400

textLink()
  text-decoration: none
  box-shadow: 0 1px 0 currentColor

  button&
    background: transparent
    border: 0
    color: inherit
    padding: 0

  &:hover
    box-shadow: 0 2px 0 currentColor

textContent()
  line-height: 1.5

  h2, h3, h4
    margin: 2em 0 1em

  p
    margin: 1em 0

  a
    color: $colorPrimary
    box-shadow: currentColor 0 1px 0

    &:hover
      box-shadow: currentColor 0 2px 0

  ol, ul
    margin: 0 0 1.5em 1.5em

  li
    padding: 0.25em 0

    > :first-child
      margin-top: 0

    > :last-child
      margin-bottom: 0

  ol
    list-style-type: decimal;

  ul
    list-style-type: disc
