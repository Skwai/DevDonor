@require "./config.styl"

field()
  position: relative
  display: block
  position: relative
  // border: 0
  // border-bottom: $colorGray solid 1px
  transition: $transitionBase
  box-shadow: none
  width: 100%
  border-radius: 0
  -webkit-appearance: none
  transition: border-color $transitionBase
  will-change: border-color
  flex: 1
  // padding: 1.5rem 0 0.5rem
  // padding: 1.5rem 1rem 0.5rem
  border-radius: 3px
  padding: 1rem 1rem
  border: $colorGray solid 1px
  background: transparent

  [empty] &
    padding: 1rem

  &[disabled]
    cursor: not-allowed
    opacity: .5

  &:focus
    border-color: $colorPrimary
    box-shadow: none
    outline: 0

fieldLabel()
  cursor: text
