@require "./config.styl"

field()
  position: relative
  display: block
  position: relative
  transition: $transitionBase
  box-shadow: none
  width: 100%
  border-radius: 0
  -webkit-appearance: none
  transition: border-color $transitionBase, box-shadow $transitionBase
  will-change: border-color
  flex: 1
  border-radius: 3px
  padding: 1rem 1rem
  border: $colorGray solid 1px
  background: transparent

  [error] &
    border-color: $colorRed

  [empty] &
    padding: 1rem

  &[disabled]
    cursor: not-allowed
    opacity: .5

  &:focus
    border-color: $colorPrimary
    box-shadow: $colorPrimary 0 0 0 1px
    outline: 0

fieldLabel()
  cursor: text
  display: block
  cursor: text
  z-index: 1
  font-weight: 600
  line-height: 1
  margin-bottom: 0.875rem

  [error] &
    color: $colorRed
