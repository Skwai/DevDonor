@require "./config.styl"

field()
  position: relative
  display: block
  position: relative
  border: 0
  border-bottom: $colorGray solid 1px
  transition: $transitionBase
  box-shadow: none
  width: 100%
  border-radius: 0
  -webkit-appearance: none
  transition: border-color $transitionBase
  will-change: border-color
  flex: 1
  padding: 1.5rem 0 0.5rem

  &[disabled]
    cursor: not-allowed
    opacity: .5

  &:hover,
  &:focus
    border-color: $colorPrimary
    box-shadow: none
    outline: 0

fieldLabel()
  cursor: text
  top: 0
  left: 0
  position: absolute
  display: block
  cursor: text
  z-index: 1
  transition: $transitionBase
  transform: translate(0, 0) scale(0.8125)
  transform-origin: left top
  font-weight: 500
  color: $colorPrimary
  opacity: .75

  [empty] &
    transform: translate(0, 100%)
    opacity: 1
