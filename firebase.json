{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "dist",
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source" : "static/**/*",
        "headers" : [{
          "key" : "Cache-Control",
          "value" : "max-age=31536000"
        }]
      },
      {
        "source" : "**/*.@(eot|otf|ttf|ttc|woff|font.css)",
        "headers" : [{
          "key" : "Access-Control-Allow-Origin",
          "value" : "*"
        }]
      },
      {
        "source" : "**/*.@(jpg|jpeg|gif|png|svg)",
        "headers" : [{
          "key" : "Cache-Control",
          "value" : "max-age=31536000"
        }]
      }
    ]
  }
}
