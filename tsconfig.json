{
  "compilerOptions": {
    "module": "es2015",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "sourceMap": true,
    "target": "es5",
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es5",
      "es6",
      "es2015",
      "es2017"
    ]
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.vue"
  ],
  "typeRoots": [
    "./src/types",
    "./node_modules/@types"
  ]
}
